/* ============================================================================
   COLOR PALETTE - YUCP Brand Colors
   ============================================================================ */
.au-window {
    /* Base colors */
    --au-bg-primary: #090909;      /* YUCP dark background */
    --au-bg-secondary: #1a1a1a;    /* Card/panel background */
    --au-bg-tertiary: #2a2a2a;     /* List items, inputs */
    --au-bg-hover: #525252;        /* Hover states - YUCP gray */
    
    /* Borders */
    --au-border-primary: #2a2a2a;
    --au-border-secondary: #3a3a3a;
    
    /* Text */
    --au-text-primary: #ffffff;    /* Main text */
    --au-text-secondary: #b0b0b0;  /* Secondary text */
    --au-text-tertiary: #808080;   /* Subtle text */
    
    /* Accent colors - YUCP Brand */
    --au-accent-primary: #36BFB1;  /* YUCP Teal - primary actions */
    --au-accent-success: #36BFB1;  /* Teal - added/success */
    --au-accent-warning: #E2A54A;  /* Orange - warnings */
    --au-accent-danger: #E24A4A;   /* Red - deleted/danger */
    --au-accent-info: #2CA497;     /* Info accent aligns with teal palette */
}

/* ============================================================================
   BASE WINDOW & LAYOUT
   ============================================================================ */
.au-window {
    flex-grow: 1;
    background-color: #090909;
}

.au-main-container {
    flex-grow: 1;
    flex-direction: column;
    min-width: 0;
}

/* ============================================================================
   TOP BAR - Header with Logo & Title
   ============================================================================ */
.au-top-bar {
    flex-direction: row;
    min-height: 100px;
    padding-top: 16px;
    padding-bottom: 16px;
    padding-left: 20px;
    padding-right: 20px;
    background-color: #1a1a1a;
    border-bottom-width: 1px;
    border-bottom-color: #2a2a2a;
    align-items: center;
    flex-wrap: wrap;
    overflow: hidden;
    transition-property: flex-wrap, min-height, padding;
    transition-duration: 0.5s, 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out, ease-in-out;
}

.au-settings-button {
    width: 32px;
    height: 32px;
    border-radius: 16px;
    border-width: 0;
    margin-left: 12px;
    background-color: #2a2a2a;
    color: #f0f0f0;
    font-size: 15px;
    transition-duration: 0.15s, 0.15s, 0.2s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
    justify-content: center;
    align-items: center;
    padding: 0;
}

.au-settings-button:hover {
    background-color: #36BFB1;
    color: #ffffff;
    scale: 1.1 1.1;
}

.au-logo {
    width: 116px;
    height: 50px;
    margin-right: 20px;
    flex-shrink: 0;
    transition-property: margin, width, height, opacity;
    transition-duration: 0.5s, 0.5s, 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out, ease-in-out, ease-in-out;
}

.au-title {
    font-size: 20px;
    color: #ffffff;
    -unity-font-style: bold;
}

/* ============================================================================
   3-PANE LAYOUT
   ============================================================================ */
.au-content-container {
    flex-grow: 1;
    flex-direction: row;
    min-width: 0;
    overflow: hidden;
    position: relative;
}

.au-left-pane {
    width: 270px;
    min-width: 200px;
    flex-shrink: 0;
    background-color: #090909;
    border-right-width: 1px;
    border-right-color: #2a2a2a;
    padding: 20px;
    overflow: hidden;
    transition-property: width, opacity, min-width, padding;
    transition-duration: 0.5s, 0.5s, 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out, ease-in-out, ease-in-out;
}

.au-right-pane {
    flex-grow: 1;
    flex-shrink: 1;
    min-width: 0;
    background-color: #090909;
    overflow: hidden;
    transition-property: opacity, width;
    transition-duration: 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out;
}

.au-right-pane .au-panel {
    padding-right: 24px;
}

/* ============================================================================
   BUTTONS - Consistent sizing and styling
   ============================================================================ */
.au-button {
    height: 32px;
    padding-left: 16px;
    padding-right: 16px;
    border-radius: 6px;
    background-color: #3a3a3a;
    border-width: 0;
    color: #ffffff;
    font-size: 12px;
    -unity-font-style: normal;
    margin-left: 4px;
    margin-right: 4px;
    -unity-text-align: middle-center;
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.au-button:hover {
    background-color: #525252;
    color: #ffffff;
    scale: 1.02 1.02;
}

.au-button:active {
    background-color: #2a2a2a;
    color: #ffffff;
    scale: 0.98 0.98;
}

.au-button-primary {
    background-color: #36BFB1;
    color: #ffffff;
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.au-button-primary:hover {
    background-color: #48d1c3;
    scale: 1.02 1.02;
}

.au-button-primary:active {
    background-color: #2da89c;
    scale: 0.98 0.98;
}

.au-button-action {
    background-color: #3a3a3a;
    color: #ffffff;
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.au-button-action:hover {
    background-color: #36BFB1;
    color: #ffffff;
    scale: 1.02 1.02;
}

.au-button-action:active {
    background-color: #2da89c;
    color: #ffffff;
    scale: 0.98 0.98;
}

.au-button-danger {
    background-color: #3a3a3a;
    color: #ffffff;
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.au-button-danger:hover {
    background-color: #E24A4A;
    color: #ffffff;
    scale: 1.02 1.02;
}

.au-button-danger:active {
    background-color: #c93a3a;
    color: #ffffff;
    scale: 0.98 0.98;
}

.au-button-build {
    background-color: #36BFB1;
    color: #ffffff;
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.au-button-build:hover {
    background-color: #48d1c3;
    scale: 1.02 1.02;
}

.au-button-build:active {
    background-color: #2da89c;
    scale: 0.98 0.98;
}

.au-button-small {
    height: 24px;
    padding-left: 12px;
    padding-right: 12px;
    font-size: 11px;
}

.au-button-large {
    height: 50px;
    font-size: 14px;
    padding-left: 24px;
    padding-right: 24px;
}

/* ============================================================================
   TYPOGRAPHY
   ============================================================================ */
.au-section-header {
    font-size: 13px;
    color: #b0b0b0;
    -unity-font-style: bold;
    letter-spacing: 0.5px;
    margin-bottom: 12px;
    text-transform: uppercase;
}

.au-label {
    font-size: 12px;
    color: #ffffff;
}

.au-label-secondary {
    font-size: 11px;
    color: #b0b0b0;
}

.au-label-small {
    font-size: 10px;
    color: #808080;
}

/* ============================================================================
   PANELS & SECTIONS
   ============================================================================ */
.au-panel {
    flex-direction: column;
    padding: 20px;
}

.au-section {
    margin-bottom: 16px;
    padding: 12px;
    background-color: #1a1a1a;
    border-radius: 8px;
    border-width: 1px;
    border-color: #2a2a2a;
    overflow: hidden;
    transition-duration: 0.3s, 0.2s;
    transition-property: opacity, border-color;
    transition-timing-function: ease-out, ease-out;
    opacity: 1;
}

/* Remove borders from sections inside avatar details panel (cards handle borders) */
.au-avatar-details-panel .au-section {
    background-color: transparent;
    border-width: 0;
    border-color: transparent;
    padding: 0;
    margin-bottom: 0;
}

/* Remove border from avatar grid section (scroll view already has border) */
.au-avatar-grid-section {
    border-width: 0;
    border-color: transparent;
    background-color: transparent;
    padding: 0;
}

.au-section-title {
    font-size: 16px;
    -unity-font-style: bold;
    margin-bottom: 12px;
    color: #ffffff;
    letter-spacing: 0.3px;
    padding-bottom: 2px;
}

/* ============================================================================
   PROFILE LIST
   ============================================================================ */
.au-profile-list-container {
    flex-grow: 1;
    flex-direction: column;
    transition-property: width, padding;
    transition-duration: 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out;
}

.au-profile-list-scroll {
    flex-grow: 1;
    margin-bottom: 12px;
}

.au-profile-item {
    background-color: #1a1a1a;
    border-radius: 6px;
    border-left-width: 3px;
    border-left-color: transparent;
    padding-top: 8px;
    padding-bottom: 8px;
    padding-left: 12px;
    padding-right: 12px;
    margin-bottom: 4px;
    flex-direction: column;
    transition-duration: 0.5s, 0.5s, 0.15s, 0.15s;
    transition-property: width, padding, background-color, border-left-color;
    transition-timing-function: ease-in-out, ease-in-out, ease-out, ease-out;
}

.au-profile-item:hover {
    background-color: #2a2a2a;
}

.au-profile-item-selected {
    background-color: #2a2a2a;
    border-left-color: #36BFB1;
}

.au-profile-item-name {
    font-size: 12px;
    color: #ffffff;
    -unity-font-style: bold;
    margin-bottom: 4px;
}

.au-profile-item-info {
    font-size: 10px;
    color: #808080;
}

.au-profile-buttons {
    flex-direction: row;
    margin-bottom: 8px;
    transition-property: flex-direction, height;
    transition-duration: 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out;
}

.au-profile-buttons Button {
    flex-grow: 1;
    margin: 2px;
    transition-property: width, margin, flex-grow, height;
    transition-duration: 0.5s, 0.5s, 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out, ease-in-out, ease-in-out;
}

.au-profile-list-container > Button {
    margin-left: 4px;
    margin-right: 4px;
    transition-property: width, margin, height;
    transition-duration: 0.5s, 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out, ease-in-out;
}

/* ============================================================================
   AVATAR GRID
   ============================================================================ */
.au-avatar-section {
    flex-direction: row;
}

.au-store-grid-scroll {
    flex-grow: 1;
    flex-shrink: 1;
    min-width: 360px;
    background-color: #111111;
    border-width: 1px;
    border-color: #2a2a2a;
    border-radius: 8px;
    padding: 16px;
    margin-top: 16px;
}

.au-store-grid {
    flex-direction: row;
    flex-wrap: wrap;
    align-content: flex-start;
    padding-bottom: 8px;
}

.au-avatar-grid-empty {
    width: 100%;
    min-height: 180px;
    justify-content: center;
    align-items: center;
    background-color: rgba(54, 191, 177, 0.05);
    border-width: 1px;
    border-color: rgba(54, 191, 177, 0.3);
    padding: 24px;
    -unity-text-align: middle-center;
}

.au-avatar-tile {
    width: 220px;
    background-color: #1a1a1a;
    border-width: 1px;
    border-color: #2a2a2a;
    border-radius: 8px;
    overflow: hidden;
    margin: 8px;
    padding-bottom: 8px;
    cursor: pointer;
    transition-duration: 0.2s, 0.2s, 0.2s;
    transition-property: border-color, background-color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.au-avatar-tile-hover {
    border-color: #36BFB1;
    background-color: rgba(54, 191, 177, 0.1);
    scale: 1.02 1.02;
}

.au-avatar-tile-selected {
    border-color: #36BFB1;
    background-color: rgba(54, 191, 177, 0.2);
    scale: 1.01 1.01;
}

.au-avatar-preview {
    height: 160px;
    background-color: #0d0d0d;
    -unity-background-scale-mode: scale-and-crop;
}

.au-avatar-tile-title {
    font-size: 14px;
    color: #ffffff;
    -unity-font-style: bold;
    margin-top: 10px;
    margin-left: 12px;
    margin-right: 12px;
}

.au-avatar-tile-tags {
    font-size: 11px;
    color: #36BFB1;
    margin-left: 12px;
    margin-right: 12px;
    margin-top: 4px;
}

.au-avatar-tile-platforms {
    flex-direction: row;
    margin: 10px;
}

.au-avatar-tile-badge {
    font-size: 10px;
    color: #36BFB1;
    border-width: 1px;
    border-color: rgba(54, 191, 177, 0.4);
    padding: 2px 6px;
    border-radius: 3px;
    background-color: rgba(54, 191, 177, 0.08);
    margin-right: 6px;
}

/* ============================================================================
   AVATAR CARDS
   ============================================================================ */
.au-avatar-card {
    background-color: #1a1a1a;
    border-radius: 8px;
    border-width: 1px;
    border-color: #2a2a2a;
    padding: 12px;
    margin-bottom: 12px;
    flex-direction: column;
    transition-duration: 0.15s, 0.15s;
    transition-property: background-color, border-color;
    transition-timing-function: ease-out, ease-out;
}

.au-avatar-card:hover {
    background-color: #2a2a2a;
    border-color: #3a3a3a;
}

.au-avatar-card-header {
    flex-direction: row;
    align-items: center;
    margin-bottom: 8px;
}

.au-avatar-card-title {
    font-size: 13px;
    color: #ffffff;
    -unity-font-style: bold;
    flex-grow: 1;
}

.au-avatar-card-preview {
    width: 64px;
    height: 64px;
    min-width: 64px;
    min-height: 64px;
    background-color: #2a2a2a;
    border-width: 1px;
    border-color: #3a3a3a;
    margin-right: 12px;
    flex-shrink: 0;
}

.au-avatar-card-actions {
    flex-direction: row;
    align-items: center;
}

.au-avatar-card-info {
    flex-direction: column;
    margin-top: 8px;
}

.au-avatar-card-info-row {
    flex-direction: row;
    align-items: center;
    margin-bottom: 4px;
}

.au-avatar-card-info-label {
    font-size: 10px;
    color: #808080;
    width: 100px;
    flex-shrink: 0;
}

.au-avatar-card-info-value {
    font-size: 11px;
    color: #b0b0b0;
    flex-grow: 1;
}

/* ============================================================================
   FORM FIELDS
   ============================================================================ */
.au-form-row {
    flex-direction: row;
    align-items: center;
    margin-bottom: 8px;
    overflow: hidden;
    transition-property: flex-direction, height;
    transition-duration: 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out;
}

.au-form-label {
    width: 120px;
    font-size: 12px;
    color: #b0b0b0;
    flex-shrink: 0;
    transition-property: width, margin, opacity;
    transition-duration: 0.5s, 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out, ease-in-out;
}

.au-form-field {
    flex-grow: 1;
    flex-shrink: 1;
    min-width: 0;
    overflow: hidden;
    transition-property: width, opacity;
    transition-duration: 0.5s, 0.5s;
    transition-timing-function: ease-in-out, ease-in-out;
}

.au-input {
    background-color: #2a2a2a;
    border-width: 1px;
    border-color: #3a3a3a;
    color: #ffffff;
    padding: 6px 8px;
    border-radius: 6px;
    min-height: 28px;
    max-width: 100%;
    overflow: hidden;
    transition-duration: 0.2s, 0.2s, 0.15s;
    transition-property: border-color, background-color, box-shadow;
    transition-timing-function: ease-out, ease-out, ease-out;
    box-shadow: 0 0 0 rgba(54, 191, 177, 0);
}

.au-input:focus {
    border-color: #36BFB1;
    background-color: #2f2f2f;
    box-shadow: 0 0 0 2px rgba(54, 191, 177, 0.2);
}

.au-input .unity-text-field__input {
    background-color: transparent;
    border-width: 0;
    color: #ffffff;
    padding: 0;
    overflow: hidden;
    text-overflow: ellipsis;
}

.au-input-multiline {
    min-height: 80px;
}

.au-input .unity-base-text-field__input {
    background-color: transparent;
    border-width: 0;
    color: #ffffff;
    padding: 0;
    overflow: hidden;
    text-overflow: ellipsis;
}

.au-input-placeholder {
    font-size: 12px;
    color: #808080;
    pointer-events: none;
}

/* ============================================================================
   BOTTOM BAR - Progress Only (Hidden by default, shown during builds)
   ============================================================================ */
.au-bottom-bar {
    flex-direction: column;
    background-color: #1a1a1a;
    border-top-width: 1px;
    border-top-color: #2a2a2a;
    padding: 16px 20px;
    flex-shrink: 0;
    display: none; /* Hidden by default, shown during builds */
}

.au-build-actions-container {
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.au-section-build-actions {
    background-color: #1a1a1a;
    border-width: 1px;
    border-color: #2a2a2a;
    padding: 16px;
    margin-bottom: 16px;
}

.au-section-advanced {
    margin-top: 8px;
}

/* ============================================================================
   COLLECTION HEADER - Batch Operations
   ============================================================================ */
/* ============================================================================
   COLLECTION HEADER - Redesigned Card-Based Layout
   ============================================================================ */
.au-collection-header-card {
    flex-direction: column;
    margin-bottom: 16px;
}

.au-collection-header-section {
    background-color: #1a1a1a;
    border-width: 1px;
    border-color: #2a2a2a;
    border-radius: 8px;
    padding: 16px;
    flex-direction: column;
    margin-bottom: 28px;
}

.au-collection-header-left {
    flex-direction: column;
    width: 100%;
}

.au-collection-name-container {
    margin-bottom: 16px;
}

.au-collection-name-field {
    background-color: transparent;
    border-width: 0;
    border-bottom-width: 2px;
    border-bottom-color: rgba(54, 191, 177, 0.3);
    border-radius: 6px;
    color: #ffffff;
    padding: 4px 0;
    font-size: 20px;
    -unity-font-style: bold;
    transition-property: border-bottom-color;
    transition-duration: 0.2s;
    transition-timing-function: ease-out;
    width: 100%;
}

.au-collection-name-field:focus {
    border-bottom-color: #36BFB1;
}

.au-collection-stats {
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 16px;
}

.au-collection-stats .au-collection-stat-badge {
    margin-right: 12px;
    margin-bottom: 8px;
}

.au-collection-stat-badge {
    background-color: #2a2a2a;
    border-width: 1px;
    border-color: #3a3a3a;
    border-radius: 6px;
    padding: 10px 14px;
    flex-direction: column;
    align-items: center;
    min-width: 70px;
    transition-property: background-color, border-color;
    transition-duration: 0.2s, 0.2s;
    transition-timing-function: ease-out, ease-out;
}

.au-collection-stat-badge-selected {
    background-color: rgba(54, 191, 177, 0.15);
    border-color: #36BFB1;
}

.au-collection-stat-badge-inactive {
    opacity: 0.5;
}

.au-collection-stat-value {
    font-size: 15px;
    -unity-font-style: bold;
    color: #ffffff;
    margin-bottom: 3px;
}

.au-collection-stat-badge-selected .au-collection-stat-value {
    color: #36BFB1;
}

.au-collection-stat-label {
    font-size: 10px;
    color: #b0b0b0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.au-collection-actions-card {
    background-color: #1a1a1a;
    border-width: 1px;
    border-color: #2a2a2a;
    border-radius: 8px;
    padding: 16px;
    flex-direction: column;
}

.au-collection-actions-header {
    margin-bottom: 12px;
}

.au-collection-actions-title {
    font-size: 14px;
    -unity-font-style: bold;
    color: #ffffff;
    margin-bottom: 4px;
    letter-spacing: 0.2px;
}

.au-collection-actions-description {
    font-size: 11px;
    color: #808080;
    line-height: 1.4;
    white-space: normal;
}

.au-collection-action-buttons {
    flex-direction: row;
    flex-wrap: wrap;
}

.au-collection-action-buttons .au-button {
    margin-right: 8px;
    margin-bottom: 8px;
}

/* ============================================================================
   AVATAR DETAILS PANEL - Expandable Individual Avatar Details
   ============================================================================ */
.au-avatar-details-panel {
    background-color: transparent;
    border-width: 0;
    border-color: transparent;
    padding: 0;
    margin-top: 16px;
    margin-bottom: 16px;
    flex-direction: row;
    align-items: flex-start;
}

/* ============================================================================
   ICON SIDEBAR
   ============================================================================ */
.au-icon-sidebar {
    width: 220px;
    min-width: 220px;
    flex-shrink: 0;
    margin-right: 20px;
    flex-direction: column;
    background-color: #1a1a1a;
    border-width: 1px;
    border-color: #2a2a2a;
    border-radius: 8px;
    padding: 16px;
    align-items: stretch;
}

.au-icon-display {
    width: 180px;
    height: 180px;
    min-width: 180px;
    min-height: 180px;
    background-color: #0f0f0f;
