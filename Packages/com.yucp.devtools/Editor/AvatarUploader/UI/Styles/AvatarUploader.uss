.yucp-section-title {
    font-size: 16px;
    -unity-font-style: bold;
    margin-bottom: 12px;
    color: #ffffff;
    letter-spacing: 0.3px;
    padding-bottom: 2px;
}

.yucp-section {
    border-radius: 8px;
    transition-duration: 0.3s, 0.2s;
    transition-property: opacity, border-color;
    transition-timing-function: ease-out, ease-out;
    opacity: 1;
}

/* ============================================================================
   INPUT OVERRIDES - AvatarUploader specific
   ============================================================================ */
.yucp-input {
    border-radius: 6px;
    transition-duration: 0.2s, 0.2s, 0.15s;
    transition-property: border-color, background-color, box-shadow;
    transition-timing-function: ease-out, ease-out, ease-out;
    box-shadow: 0 0 0 rgba(54, 191, 177, 0);
}

.yucp-input:focus {
    border-color: #36BFB1;
    background-color: #2f2f2f;
    box-shadow: 0 0 0 2px rgba(54, 191, 177, 0.2);
}

.yucp-input-placeholder {
    font-size: 12px;
    color: #808080;
    pointer-events: none;
}

/* ============================================================================
   BUTTON OVERRIDES - AvatarUploader specific
   ============================================================================ */
.yucp-button {
    border-radius: 6px;
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.yucp-button:hover {
    scale: 1.02 1.02;
}

.yucp-button:active {
    scale: 0.98 0.98;
}

.yucp-button-primary {
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.yucp-button-primary:hover {
    scale: 1.02 1.02;
}

.yucp-button-primary:active {
    scale: 0.98 0.98;
}

.yucp-button-action {
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.yucp-button-action:hover {
    scale: 1.02 1.02;
}

.yucp-button-action:active {
    scale: 0.98 0.98;
}

.yucp-button-danger {
    transition-duration: 0.1s, 0.1s, 0.15s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out, ease-out, ease-out;
    scale: 1 1;
}

.yucp-button-danger:hover {
    scale: 1.02 1.02;
}

.yucp-button-danger:active {
    scale: 0.98 0.98;
}

