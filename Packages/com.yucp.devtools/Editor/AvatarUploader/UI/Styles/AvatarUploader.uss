}

.au-hero-slide-label {
    position: absolute;
    left: 12px;
    top: 12px;
    background-color: rgba(20, 20, 20, 0.85);
    color: #ffffff;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 11px;
    letter-spacing: 0.3px;
}

.au-store-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
