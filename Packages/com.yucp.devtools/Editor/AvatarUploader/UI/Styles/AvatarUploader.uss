}

.au-hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    justify-content: center;
    align-items: center;
}

.au-hero-slide-button {
    width: 32px;
    height: 32px;
    border-radius: 16px;
    border-width: 0;
    margin: 0 6px;
    background-color: rgba(20, 20, 20, 0.88);
    color: #f3f3f3;
    font-size: 16px;
}

.au-hero-slide-button:hover {
    background-color: rgba(54, 191, 177, 0.9);
}

.au-hero-slide-prev {
    position: absolute;
    left: 8px;
}

.au-hero-slide-next {
    position: absolute;
    right: 8px;
}

.au-hero-slide-add {
    position: absolute;
    bottom: 12px;
}

.au-hero-slide-seticon {
    position: absolute;
    bottom: 12px;
    right: 12px;
    width: 84px;
    height: 30px;
