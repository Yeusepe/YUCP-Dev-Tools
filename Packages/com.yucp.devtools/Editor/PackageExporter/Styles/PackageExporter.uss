   ============================================================================ */

.yucp-onboarding-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.yucp-onboarding-dimmer {
    position: absolute;
    background-color: rgba(0, 0, 0, 0.7);
}

.yucp-onboarding-spotlight-border {
