}

.yucp-onboarding-title {
    font-size: 16px;
    color: #ffffff;
    margin-bottom: 8px;
    flex-grow: 1;
}

.yucp-onboarding-counter {
    font-size: 10px;
    color: rgba(255, 255, 255, 0.4);
    align-self: flex-start;
    margin-top: 4px;
}

.yucp-onboarding-description {
    font-size: 12px;
    margin-bottom: 12px;
    white-space: normal;
    color: #d4d4d4;
}

/* Button consistency in onboarding card */
.yucp-onboarding-card Button {
    height: 32px;
    border-radius: 6px;
    font-size: 12px;
    background-color: rgba(255, 255, 255, 0.05);
