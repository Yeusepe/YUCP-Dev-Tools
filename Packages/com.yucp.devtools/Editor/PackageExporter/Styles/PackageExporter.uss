    opacity: 0.8;
    transition-duration: 0.1s;
    transition-property: all;
    transition-timing-function: ease-out;
}

.yucp-onboarding-card {
    position: absolute;
    width: 380px;
    padding: 24px;
    background-color: #1e1e1e;
    border-width: 1px;
    border-color: rgba(255, 255, 255, 0.08);
