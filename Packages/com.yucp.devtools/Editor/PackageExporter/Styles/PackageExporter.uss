    transition-timing-function: ease-out;
}

.yucp-resize-handle:hover {
    background-color: rgba(54, 191, 177, 0.6);
}

.yucp-resize-handle:active {
    background-color: rgba(54, 191, 177, 0.8);
}

/* ============================================================================
