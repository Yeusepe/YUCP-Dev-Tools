}

.yucp-onboarding-card Button:active {
    background-color: rgba(255, 255, 255, 0.02);
}

.yucp-onboarding-card .yucp-button-primary {
    background-color: rgba(54, 191, 177, 0.2);
    border-color: rgba(54, 191, 177, 0.5);
    color: #36BFB1;
}

.yucp-onboarding-card .yucp-button-primary:hover {
    background-color: rgba(54, 191, 177, 0.3);
    border-color: rgba(54, 191, 177, 0.7);
}

.yucp-onboarding-card .yucp-button-text {
    background-color: transparent;
    border-width: 0;
    color: rgba(255, 255, 255, 0.5);
}

.yucp-onboarding-card .yucp-button-text:hover {
    background-color: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.8);
    border-width: 0;
}

/* ============================================================================
   EXPORT ACTIONS OVERLAY - Teaching Tip Style
   ============================================================================ */
.yucp-teaching-tip-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    justify-content: flex-end;
    align-items: flex-end;
}

.yucp-teaching-tip-container {
    background-color: #2b2b2b;
    border-radius: 8px;
    padding: 16px;
    min-width: 250px;
    border-width: 1px;
    border-color: rgba(54, 191, 177, 0.5); /* Brand color border */
    background-image: none;
}

.yucp-teaching-tip-title {
    font-size: 14px;
    -unity-font-style: bold;
    color: #ffffff;
    margin-bottom: 4px;
}

.yucp-teaching-tip-description {
    font-size: 12px;
    color: #cccccc;
    margin-bottom: 12px;
    white-space: normal;
}

.yucp-teaching-tip-divider {
    height: 1px;
    background-color: rgba(255, 255, 255, 0.1);
    margin-bottom: 12px;
}
/* ============================================================================
   TOP NAV BAR - Detailed Navigation
   ============================================================================ */
.yucp-right-pane {
    flex-grow: 1;
    overflow: hidden; /* Ensure top nav bar clips when sliding up */
    position: relative;
    flex-direction: column;
}

.yucp-top-navbar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    align-items: center;
    padding-top: 20px; 
    height: auto;
    background-color: transparent;
    border-bottom-width: 0;
}

.yucp-top-navbar-container {
    flex-direction: row;
    background-color: rgba(30, 30, 30, 0.98);
    border-width: 1px;
    border-color: rgba(255, 255, 255, 0.12);
    border-radius: 20px;
    padding: 4px 6px;
}

.yucp-top-navbar-tab {
    background-color: transparent;
    border-width: 0;
    border-radius: 14px;
    margin: 0 2px;
    padding: 0 12px;
    height: 28px;
    font-size: 11px;
    -unity-font-style: bold;
    color: rgba(255, 255, 255, 0.6);
    transition-duration: 0.2s;
    transition-property: background-color, color, scale;
    transition-timing-function: ease-out;
    cursor: link;
    justify-content: center;
    align-items: center;
    -unity-text-align: middle-center;
}

.yucp-top-navbar-tab:hover {
    background-color: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.95);
    scale: 1.05 1.05;
}

.yucp-top-navbar-tab.selected {
    background-color: rgba(54, 191, 177, 0.2);
    border-width: 1px;
    border-color: rgba(54, 191, 177, 0.5);
    color: #36BFB1;
}

/* ============================================================================
   NAV GROUPS - Grouped Tabs Logic
   ============================================================================ */
.yucp-nav-group {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-right: 2px;
    border-radius: 14px;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0.03);
    transition-property: background-color, flex-grow, max-width;
    transition-duration: 0.2s, 0.3s, 0.3s;
    transition-timing-function: ease-out, ease-in-out, ease-in-out;
}

.yucp-sidebar-toggle-button {
    display: none; /* Hidden by default (Wide/Medium) */
    width: 28px;
    height: 28px;
    margin-right: 8px;
    background-color: transparent;
    border-width: 0;
    color: rgba(255, 255, 255, 0.6);
    font-size: 10px;
    -unity-text-align: middle-center;
    border-radius: 50%;
}

.yucp-sidebar-toggle-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: #ffffff;
}

.yucp-nav-group-label {
    display: none;
    font-size: 10px;
    color: rgba(255, 255, 255, 0.5);
    padding: 0 10px;
    height: 28px;
    -unity-text-align: middle-center;
    background-color: transparent;
    border-radius: 14px;
    white-space: nowrap;
}

.yucp-nav-group-content {
    flex-direction: row;
    align-items: center;
    overflow: hidden;
}

/* NARROW MODE BEHAVIOR */
/* Toggle Button: ONLY show in Window Narrow Mode (Mobile) */
.yucp-window-narrow .yucp-sidebar-toggle-button {
    display: flex;
}

/* Nav Groups: Collapse in Window Narrow, Medium, OR Local Narrow */
.yucp-window-narrow .yucp-nav-group,
.yucp-window-medium .yucp-nav-group,
.yucp-navbar-narrow .yucp-nav-group {
    background-color: rgba(255, 255, 255, 0.03);
    flex-shrink: 0;
    max-width: 80px; /* Collapsed width approx */
}

.yucp-window-narrow .yucp-nav-group-label,
.yucp-window-medium .yucp-nav-group-label,
.yucp-navbar-narrow .yucp-nav-group-label {
    display: flex;
}

.yucp-window-narrow .yucp-nav-group-content,
.yucp-window-medium .yucp-nav-group-content,
.yucp-navbar-narrow .yucp-nav-group-content {
    flex-basis: 0;
    max-width: 0;
    overflow: hidden;
}

/* EXPANDED STATE (Narrow Mode) */
.yucp-window-narrow .yucp-nav-group.expanded, 
.yucp-window-medium .yucp-nav-group.expanded,
.yucp-navbar-narrow .yucp-nav-group.expanded {
    background-color: rgba(255, 255, 255, 0.03);
    flex-grow: 1; /* Was 0, but 1 behaves better for filling space */
    max-width: 400px; /* Large enough to fit content */
    justify-content: flex-start; /* Was center, standard flex-start usually safer */
    overflow: visible; /* Ensure content isn't clipped at edges */
}

.yucp-window-narrow .yucp-nav-group.expanded .yucp-nav-group-label,
.yucp-window-medium .yucp-nav-group.expanded .yucp-nav-group-label,
.yucp-navbar-narrow .yucp-nav-group.expanded .yucp-nav-group-label {
    display: none;
}

.yucp-window-narrow .yucp-nav-group.expanded .yucp-nav-group-content,
.yucp-window-medium .yucp-nav-group.expanded .yucp-nav-group-content,
.yucp-navbar-narrow .yucp-nav-group.expanded .yucp-nav-group-content {
    flex-basis: auto;
    max-width: 999px;
    justify-content: flex-start;
    overflow: visible; /* Prevent clipping */

    /* Content animation handled by YUCP.Motion */
}

/* Ensure tabs inside expanded groups have correct color */
.yucp-nav-group.expanded .yucp-top-navbar-tab {
    color: rgba(255, 255, 255, 0.7); /* Standard color */
}
.yucp-nav-group.expanded .yucp-top-navbar-tab:hover {
    color: #ffffff;
}
.yucp-nav-group.expanded .yucp-top-navbar-tab.selected {
    color: #36BFB1;
}

/* COMPACT MODE OVERRIDES */
.yucp-compact-mode .yucp-nav-group {
    border-radius: 12px;
}
.yucp-compact-mode .yucp-nav-group-label {
    height: 24px;
    font-size: 9px;
    padding: 0 8px;
}

/* ============================================================================
   RIGHT ZONE - Split Action Header
   ============================================================================ */
.yucp-top-navbar-right-zone {
    position: absolute;
    right: 0;
    top: 20px; /* Explicitly match navbar padding-top (was 14px) */
    height: 38px; /* Explicitly match container height */
    translate: 0 0; /* Removing the 50% centering hack */
    flex-direction: row;
    align-items: center;
    padding-right: 24px;
}

.yucp-navbar-separator {
    width: 6px; /* Spacing only */
    height: 18px;
    background-color: transparent; /* Removed visible line */
    margin-right: 0;
}

.yucp-tools-action-button {
    flex-direction: row;
    align-items: center;
    height: 34px; /* Slightly smaller than 38px Navbar */
    padding: 0 4px;
    background-color: rgba(30, 30, 30, 0.98); 
    border-width: 1px;
    border-color: rgba(255, 255, 255, 0.12);
    border-radius: 17px; /* Half of height */
    transition-duration: 0.25s;
    transition-property: background-color, border-color, padding, width, max-width;
    transition-timing-function: ease-out-circ;
    overflow: hidden;
    max-width: 34px; /* Start collapsed (circle width) */
}

.yucp-tools-action-button:hover {
    background-color: rgba(50, 50, 50, 1); /* Lighter on hover, similar key */
    border-color: rgba(255, 255, 255, 0.25);
    padding: 0 12px;
    max-width: 110px; /* Expand to fit content */
}

.yucp-tools-action-icon {
    width: 24px; /* Centered in 34px button (34-4*2 padding approx) or just fixed width */
    font-size: 16px;
    color: rgba(255, 255, 255, 0.9);
    -unity-text-align: middle-center;
}

.yucp-tools-action-button:hover .yucp-tools-action-icon {
    color: #ffffff;
}

.yucp-tools-action-label {
    width: auto;
    font-size: 11px;
    color: #ffffff;
    margin-left: 6px;
    opacity: 0;
    transition-duration: 0.15s;
    transition-property: opacity;
    white-space: nowrap;
}

.yucp-tools-action-button:hover .yucp-tools-action-label {
    opacity: 1;
}

/* Responsive Top Bar */
.yucp-window-narrow .yucp-top-navbar-tab,
.yucp-navbar-narrow .yucp-top-navbar-tab {
    padding: 0 6px;
    margin: 0 1px;
    font-size: 10px;
}

.yucp-window-narrow .yucp-top-navbar-container,
.yucp-navbar-narrow .yucp-top-navbar-container {
    padding: 4px 4px; 
}

/* ============================================================================
   COMPACT MODE - High Density Layout
   ============================================================================ */
.yucp-compact-mode .yucp-section-container {
    margin-bottom: 8px;
