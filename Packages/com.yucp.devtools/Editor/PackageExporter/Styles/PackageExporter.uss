}

/* Responsive metadata layout */
.yucp-window-narrow .yucp-metadata-header {
    flex-direction: column;
    align-items: flex-start;
}

.yucp-window-narrow .yucp-metadata-icon-container {
    margin-bottom: 12px;
}

.yucp-window-narrow .yucp-metadata-name-field {
    width: 100%;
}

.yucp-window-narrow .yucp-metadata-card {
    flex: 1 1 100%;
    min-width: 0;
}

.yucp-window-medium .yucp-metadata-card {
    flex: 1 1 100%;
    min-width: 0;
}

/* ============================================================================
   SUPPORT TOAST - Responsive Design
   ============================================================================ */
.yucp-support-toast {
    top: 20px;
    right: 20px;
    width: 420px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 12px;
    padding-right: 12px;
    transition-property: opacity, translate, background-color;
    transition-duration: 0.3s, 0.3s, 0.2s;
    transition-timing-function: ease-out, ease-out, ease;
}

.yucp-support-toast-content {
    flex-direction: row;
    align-items: center;
    transition-property: flex-direction;
    transition-duration: 0.2s;
    transition-timing-function: ease;
}

.yucp-support-text-container {
    flex-direction: column;
    flex-grow: 0;
    flex-shrink: 1;
    min-width: 0;
}

.yucp-support-actions-container {
    flex-direction: column;
    align-items: flex-end;
    flex-shrink: 0;
    min-width: 90px;
}

/* ============================================================================
   SUPPORT TOAST - Responsive Design
   ============================================================================ */
.yucp-window-narrow .yucp-support-toast {
    width: 100%;
    right: 0;
    left: 0;
    top: 50px;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 12px;
    padding-right: 12px;
    border-radius: 0;
    background-color: rgba(100, 75, 35, 1);
    border-bottom-width: 2px;
    border-bottom-color: rgba(80, 60, 25, 1);
}

.yucp-window-narrow .yucp-support-toast-content {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

.yucp-window-narrow .yucp-support-toast-content Image {
    visibility: hidden;
    width: 0;
    height: 0;
    margin-right: 0;
}

.yucp-window-narrow .yucp-support-text-container {
    flex-grow: 1;
    flex-shrink: 1;
    min-width: 0;
    margin-right: 12px;
}

.yucp-window-narrow .yucp-support-title {
    font-size: 12px;
    color: rgba(255, 255, 255, 1);
    margin-bottom: 2px;
}

.yucp-window-narrow .yucp-support-subtitle {
    font-size: 10px;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    max-height: 30px;
    color: rgba(240, 240, 240, 1);
}

.yucp-window-narrow .yucp-support-actions-container {
    flex-shrink: 0;
    align-items: flex-start;
    flex-direction: column;
}

.yucp-window-narrow .yucp-support-button {
    min-width: 70px;
    height: 26px;
    font-size: 10px;
    margin-bottom: 4px;
    margin-right: 0;
}

.yucp-window-narrow .yucp-support-actions-container VisualElement {
    flex-direction: column;
    align-items: flex-start;
}

.yucp-window-narrow .yucp-support-actions-container Button {
    font-size: 9px;
    min-height: 18px;
    padding-left: 4px;
    padding-right: 4px;
    margin-bottom: 2px;
    transition-property: color;
    transition-duration: 0.15s;
    transition-timing-function: ease;
}

.yucp-window-medium .yucp-support-toast {
    width: 380px;
}

.yucp-window-wide .yucp-support-toast {
    width: 420px;
}

/* ============================================================================
   PACKAGE LOGO - Size control
   ============================================================================ */
.yucp-package-logo {
    width: 185px;
    height: 40px;
    margin-right: 16px;
    flex-shrink: 0;
    background-color: transparent;
    border-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    border-right-width: 0;
    padding: 0;
    padding-top: 0;
    padding-bottom: 0;
    padding-left: 0;
    padding-right: 0;
    overflow: hidden;
    -unity-background-scale-mode: stretch-to-fill;
}

/* ============================================================================
   BANNER SECTION - Package banner with gradient
   ============================================================================ */
.yucp-banner-container {
    position: relative;
    height: 400px;
    margin-bottom: 32px;
    padding: 0;
    overflow: visible;
    flex-shrink: 0;
    width: 100%;
    min-width: 100%;
}

.yucp-banner-image-container {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    -unity-background-scale-mode: scale-and-crop;
    -unity-background-image-tint-color: rgba(255, 255, 255, 1);
    background-color: transparent;
}

.yucp-banner-gradient-overlay {
    position: absolute;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
    -unity-background-scale-mode: stretch-to-fill;
}

.yucp-banner-change-button {
    position: absolute;
    height: 24px;
    padding-left: 12px;
    padding-right: 12px;
    font-size: 11px;
    background-color: rgba(50, 50, 50, 0.95);
    border-width: 1px;
    border-color: rgba(65, 65, 65, 0.9);
    color: #e0e0e0;
    border-radius: 4px;
    justify-content: center;
    align-items: center;
}

.yucp-banner-change-button:hover {
    background-color: rgba(60, 60, 60, 0.95);
    border-color: rgba(75, 75, 75, 0.9);
}

.yucp-banner-change-button:active {
    background-color: rgba(40, 40, 40, 0.95);
}


/* Responsive banner */
.yucp-window-narrow .yucp-banner-container {
    height: 300px;
}

.yucp-window-medium .yucp-banner-container {
    height: 350px;
}
